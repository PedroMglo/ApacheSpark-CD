{
  "name": "ApacheSpark-CD",
  "dockerComposeFile": "docker-compose.yml",
  "service": "apache_spark",
  "runServices": ["postgres_db"],
  "workspaceFolder": "/workspaces/ApacheSpark-CD",
  "remoteUser": "vscode",
  "updateRemoteUserUID": false,

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "tintinweb.graphviz-interactive-preview",
        "shd101wyy.markdown-preview-enhanced",
        // Python / qualidade de código
        "ms-python.vscode-pylance", // IntelliSense rápido e bom
        "ms-python.black-formatter", // Formatação automática com Black
        "ms-python.isort", // Organização de imports
        "charliermarsh.ruff", // Linter rápido (alternativa ao flake8)
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",

        // Docker / Dev Containers
        "ms-azuretools.vscode-docker", // Ver logs, containers, imagens
        "ms-vscode-remote.remote-containers", // Ajuda com devcontainers
        "yzhang.markdown-all-in-one",
        "oderwat.indent-rainbow"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },

  "containerEnv": {
    "JAVA_OPTS": "-Xms512m -Xmx4g",
    "_JAVA_OPTIONS": "-Xms512m -Xmx4g"
  },

  "remoteEnv": {
    "PYSPARK_PYTHON": "/usr/local/bin/python",
    "PYSPARK_DRIVER_PYTHON": "/usr/local/bin/python"
  },
  "postCreateCommand": "cd /workspaces/ApacheSpark-CD && set -e; bash scripts/bootstrap.sh",
  "postStartCommand": "cd /workspaces/ApacheSpark-CD && sudo chown -R vscode:vscode data && sudo chmod -R u+rwX data && bash scripts/get_data.sh && bash scripts/run_all_sql_files.sh"
}
