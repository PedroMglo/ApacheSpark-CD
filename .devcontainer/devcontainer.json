{
  "name": "ApacheSpark-CD",
  "dockerComposeFile": "docker-compose.yml",
  "service": "apache_spark",
  "runServices": ["postgres_db"],
  "workspaceFolder": "/workspaces/ApacheSpark-CD",
  "remoteUser": "vscode",
  "updateRemoteUserUID": false,

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "tintinweb.graphviz-interactive-preview",
        "shd101wyy.markdown-preview-enhanced",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "yzhang.markdown-all-in-one",
        "oderwat.indent-rainbow"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "jupyter.jupyterServerType": "local"
      }
    }
  },

  "containerEnv": {
    "JAVA_OPTS": "-Xms512m -Xmx4g",
    "_JAVA_OPTIONS": "-Xms512m -Xmx4g",
    "POSTGRES_HOST": "postgres_db",
    "POSTGRES_PORT": "5432",
    "SPARK_LOCAL_IP": "0.0.0.0",
    "SPARK_DRIVER_BIND_ADDRESS": "0.0.0.0"
  },

  "remoteEnv": {
    "PYSPARK_PYTHON": "/opt/venv/bin/python",
    "PYSPARK_DRIVER_PYTHON": "/opt/venv/bin/python"
  },

  "forwardPorts": [4040, 4041, 4042, 8888, 18080],
  "portsAttributes": {
    "4040": { "label": "Spark UI (Local Job)", "onAutoForward": "notify" },
    "4041": { "label": "Spark UI (2)", "onAutoForward": "silent" },
    "4042": { "label": "Spark UI (3)", "onAutoForward": "silent" },
    "8888": { "label": "Jupyter", "onAutoForward": "notify" },
    "18080": { "label": "Spark History Server", "onAutoForward": "silent" }
  },

  "postCreateCommand": "bash -lc 'cd /workspaces/ApacheSpark-CD && set -euo pipefail && bash scripts/bootstrap.sh'",

  "postStartCommand": "bash -lc 'cd /workspaces/ApacheSpark-CD && set -euo pipefail; if [ -d data ] && [ ! -f data/.permissions_fixed ]; then sudo chown -R vscode:vscode data && sudo chmod -R u+rwX data && touch data/.permissions_fixed; fi; if [ ! -f data/.seeded ]; then bash scripts/get_data.sh && bash scripts/run_all_sql_files.sh && touch data/.seeded; fi'"
}
